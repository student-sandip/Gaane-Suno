<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#121212"
    android:overScrollMode="never"
    android:padding="@dimen/_1sdp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/onlinePlayerRoot"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#121212"
        android:padding="@dimen/_13sdp"
        tools:context=".OnlinePlayerActivity">

        <!-- Top Bar -->
        <ImageButton
            android:id="@+id/btnBack"
            android:layout_width="@dimen/_32sdp"
            android:layout_height="@dimen/_36sdp"
            android:layout_marginTop="32dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:src="@drawable/ic_back"
            android:contentDescription="Back"
            app:tint="#FFFFFF"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageButton
            android:id="@+id/btnMore"
            android:layout_width="@dimen/_32sdp"
            android:layout_height="@dimen/_36sdp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:src="@drawable/ic_more"
            android:contentDescription="More"
            app:tint="#FFFFFF"
            app:layout_constraintTop_toTopOf="@id/btnBack"
            app:layout_constraintEnd_toEndOf="parent" />

        <TextView
            android:id="@+id/appTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Gaane Suno Online"
            android:textColor="#FFFFFF"
            android:textSize="22sp"
            android:textStyle="bold"
            android:gravity="center"
            app:layout_constraintStart_toEndOf="@id/btnBack"
            app:layout_constraintEnd_toStartOf="@id/btnMore"
            app:layout_constraintTop_toTopOf="@id/btnBack"
            app:layout_constraintBottom_toBottomOf="@id/btnBack" />

        <!-- Album Art -->
        <ImageView
            android:id="@+id/albumArt"
            android:layout_width="@dimen/_260sdp"
            android:layout_height="@dimen/_260sdp"
            android:layout_marginTop="@dimen/_18sdp"
            android:scaleType="centerCrop"
            android:clipToOutline="true"
            android:background="@drawable/rounded_album_art"
            app:layout_constraintTop_toBottomOf="@id/btnBack"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Buffering Indicator -->
        <ProgressBar
            android:id="@+id/bufferingProgress"
            style="?android:attr/progressBarStyleLarge"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:indeterminateTint="#C31D77"
            android:visibility="gone"
            app:layout_constraintTop_toTopOf="@id/albumArt"
            app:layout_constraintBottom_toBottomOf="@id/albumArt"
            app:layout_constraintStart_toStartOf="@id/albumArt"
            app:layout_constraintEnd_toEndOf="@id/albumArt" />

        <!-- Song Title -->
        <TextView
            android:id="@+id/songTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_16sdp"
            android:text="Online Song Title"
            android:textColor="#FFFFFF"
            android:textSize="@dimen/_14ssp"
            android:textStyle="bold"
            android:ellipsize="marquee"
            android:marqueeRepeatLimit="marquee_forever"
            android:singleLine="true"
            android:scrollHorizontally="true"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:gravity="center"
            app:layout_constraintTop_toBottomOf="@id/albumArt"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Artist -->
        <TextView
            android:id="@+id/artistName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_4sdp"
            android:text="Artist Name"
            android:textColor="#BBBBBB"
            android:textSize="@dimen/_9sdp"
            android:ellipsize="marquee"
            android:marqueeRepeatLimit="marquee_forever"
            android:singleLine="true"
            android:scrollHorizontally="true"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:gravity="center"
            app:layout_constraintTop_toBottomOf="@id/songTitle"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Shuffle | Timer | Repeat (replaces Like/Download/Share) -->
        <LinearLayout
            android:id="@+id/shuffleRepeatRow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_7sdp"
            android:orientation="horizontal"
            android:gravity="center"
            app:layout_constraintTop_toBottomOf="@id/artistName"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <ImageButton
                android:id="@+id/btnShuffle"
                android:layout_width="@dimen/_32sdp"
                android:layout_height="@dimen/_32sdp"
                android:src="@drawable/ic_shuffle_off"
                android:background="?attr/selectableItemBackgroundBorderless"
                app:tint="#FFFFFF" />

            <ImageButton
                android:id="@+id/btnTimer"
                android:layout_width="@dimen/_32sdp"
                android:layout_height="@dimen/_32sdp"
                android:layout_marginHorizontal="16dp"
                android:src="@drawable/ic_timer"
                android:background="?attr/selectableItemBackgroundBorderless"
                app:tint="#FFFFFF" />

            <ImageButton
                android:id="@+id/btnRepeat"
                android:layout_width="@dimen/_32sdp"
                android:layout_height="@dimen/_32sdp"
                android:src="@drawable/ic_repeat_off"
                android:background="?attr/selectableItemBackgroundBorderless"
                app:tint="#FFFFFF" />
        </LinearLayout>

        <!-- Buffering / Loaded Time -->
        <TextView
            android:id="@+id/currentTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="00:00"
            android:textColor="#AAAAAA"
            android:textSize="12sp"
            app:layout_constraintTop_toBottomOf="@id/shuffleRepeatRow"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/totalTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="00:00"
            android:textColor="#AAAAAA"
            android:textSize="12sp"
            app:layout_constraintTop_toTopOf="@id/currentTime"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- SeekBar -->
        <SeekBar
            android:id="@+id/seekBar"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_4sdp"
            android:paddingStart="@dimen/_8sdp"
            android:paddingEnd="@dimen/_8sdp"
            android:thumb="@drawable/seekbar_thumb"
            android:progressDrawable="@drawable/custom_seekbar_progress"
            app:layout_constraintTop_toBottomOf="@id/currentTime"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Controls -->
        <LinearLayout
            android:id="@+id/playerControls"
            android:layout_width="@dimen/_250sdp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_14sdp"
            android:orientation="horizontal"
            android:gravity="center"
            app:layout_constraintTop_toBottomOf="@id/seekBar"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <ImageButton
                android:id="@+id/btnPrev"
                android:layout_width="@dimen/_46sdp"
                android:layout_height="@dimen/_46sdp"
                android:layout_marginEnd="@dimen/_25sdp"
                android:background="@drawable/ic_btn_neumorphic"
                android:src="@drawable/ic_prev"
                app:tint="#353333" />

            <ImageButton
                android:id="@+id/btnPlayPause"
                android:layout_width="@dimen/_53sdp"
                android:layout_height="@dimen/_55sdp"
                android:background="@drawable/btn_glow_orange"
                android:src="@drawable/ic_play"
                app:tint="#FFFFFF" />

            <ImageButton
                android:id="@+id/btnNext"
                android:layout_width="@dimen/_46sdp"
                android:layout_height="@dimen/_46sdp"
                android:layout_marginStart="@dimen/_25sdp"
                android:background="@drawable/ic_btn_neumorphic"
                android:src="@drawable/ic_next"
                app:tint="#353333" />
        </LinearLayout>

        <!-- Streaming Quality / Network Indicator -->
        <LinearLayout
            android:id="@+id/streamInfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_10sdp"
            android:orientation="horizontal"
            android:gravity="center"
            app:layout_constraintTop_toBottomOf="@id/playerControls"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <ImageView
                android:id="@+id/qualityIcon"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:src="@drawable/ic_network"
                app:tint="#AAAAAA"
                android:layout_marginEnd="4dp"/>

            <TextView
                android:id="@+id/qualityText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android.text="128 kbps"
                android:textColor="#AAAAAA"
                android:textSize="11sp" />
        </LinearLayout>

        <!-- Footer -->
        <TextView
            android:id="@+id/footer"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_22sdp"
            android:gravity="center"
            android:paddingBottom="@dimen/_1sdp"
            android:text="Â© 2025 Gaane Suno Online. All rights reserved."
            android:textColor="#888888"
            android:textSize="@dimen/_9sdp"
            app:layout_constraintTop_toBottomOf="@id/streamInfo"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>
