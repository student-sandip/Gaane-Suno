<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#101010">

    <!-- Main Content Layout -->
    <LinearLayout
        android:id="@+id/contentLayout"
        android:orientation="vertical"
        android:paddingHorizontal="@dimen/_10sdp"
        android:paddingTop="@dimen/_10sdp"
        android:layout_above="@id/bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!-- Title -->
        <TextView
            android:id="@+id/favTitle"
            android:text="Favorites ❤️"
            android:textColor="#FFFFFF"
            android:textSize="@dimen/_18ssp"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_marginTop="@dimen/_20sdp"
            android:layout_marginBottom="@dimen/_8sdp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <!-- Search Bar -->
        <SearchView
            android:id="@+id/searchView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/_8sdp"
            android:queryHint="Search in favorites"
            android:iconifiedByDefault="false"
            android:queryBackground="@android:color/transparent"
            android:background="@drawable/search_bar_background_rectangular" />

        <!-- Favorites List -->
        <ListView
            android:id="@+id/favoritesList"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:divider="@null"
            android:dividerHeight="0dp"
            android:paddingTop="@dimen/_6sdp"
            android:clipToPadding="false"
            android:scrollbars="none" />

        <TextView
            android:id="@+id/no_favorites_text"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="You haven't added any favorite songs yet!\nAdd songs to your favorites to see them here."
            android:textColor="#FFFFFF"
            android:gravity="center"
            android:textSize="18sp"
            android:visibility="gone"/>

    </LinearLayout>

    <!-- Bottom Navigation -->
    <include layout="@layout/bottom_navigation"/>

</RelativeLayout>
