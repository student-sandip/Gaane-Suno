<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#121212"
    tools:context=".SongInfoActivity">

    <!-- Header -->
    <LinearLayout
        android:id="@+id/headerLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#E65100"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingTop="@dimen/_29sdp"
        android:paddingBottom="@dimen/_15sdp"
        android:paddingStart="@dimen/_16sdp"
        android:paddingEnd="@dimen/_16sdp">

        <ImageView
            android:id="@+id/backButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="Back"
            android:padding="@dimen/_14sdp"
            android:src="@drawable/ic_back" />

        <TextView
            android:id="@+id/songInfoTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_1sdp"
            android:text="Song Info"
            android:textColor="#FFFFFF"
            android:textSize="@dimen/_22ssp"
            android:textStyle="bold" />
    </LinearLayout>

    <!-- Scrollable Info -->
    <ScrollView
        android:id="@+id/contentScroll"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/headerLayout"
        android:layout_marginTop="@dimen/_10sdp"
        android:padding="@dimen/_16sdp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:text="Title:"
                android:textStyle="bold"
                android:textSize="@dimen/_16ssp"
                android:textColor="#FFFFFF"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_12sdp" />

            <TextView
                android:id="@+id/infoTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Unknown Title"
                android:textSize="@dimen/_12ssp"
                android:textColor="#DDDDDD" />

            <TextView
                android:text="Artist:"
                android:textStyle="bold"
                android:textSize="@dimen/_16ssp"
                android:textColor="#FFFFFF"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_12sdp" />

            <TextView
                android:id="@+id/infoArtist"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Unknown Artist"
                android:textSize="@dimen/_12ssp"
                android:textColor="#DDDDDD" />

            <TextView
                android:text="Album:"
                android:textStyle="bold"
                android:textSize="@dimen/_16ssp"
                android:textColor="#FFFFFF"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_12sdp" />

            <TextView
                android:id="@+id/infoAlbum"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Unknown Album"
                android:textSize="@dimen/_12ssp"
                android:textColor="#DDDDDD" />

            <TextView
                android:text="Duration:"
                android:textStyle="bold"
                android:textSize="@dimen/_16ssp"
                android:textColor="#FFFFFF"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_12sdp" />

            <TextView
                android:id="@+id/infoDuration"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0:00"
                android:textSize="@dimen/_12ssp"
                android:textColor="#DDDDDD" />

            <TextView
                android:text="File Path:"
                android:textStyle="bold"
                android:textSize="@dimen/_16ssp"
                android:textColor="#FFFFFF"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_12sdp" />

            <TextView
                android:id="@+id/infoPath"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="storage/emulated/0/Music/song.mp3"
                android:textSize="@dimen/_12ssp"
                android:textColor="#DDDDDD"
                android:layout_marginBottom="@dimen/_32sdp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_48sdp"
                android:gravity="center"
                android:text="Â© 2025 GaanaSuno. All rights reserved."
                android:textColor="#888888"
                android:textSize="@dimen/_12ssp" />
        </LinearLayout>
    </ScrollView>
</RelativeLayout>
